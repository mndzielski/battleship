<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import pl.edu.wat.wcy.isi.pz.battleship.components.button.BackButton?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
          fx:controller="pl.edu.wat.wcy.isi.pz.battleship.controllers.menu.StatisticsMenuController"
          alignment="TOP_CENTER" hgap="10" vgap="2"
          AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0">
    <BackButton i18n="menu.statistics" onAction="#handleMainMenu" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <ListView fx:id="listView" GridPane.columnIndex="0" GridPane.rowIndex="1" fixedCellSize="-Infinity">
        <StackPane>
            <ImageView fitHeight="50" fitWidth="50">
                <Image url="@/images/loader.gif"/>
            </ImageView>
        </StackPane>
    </ListView>
</GridPane>
